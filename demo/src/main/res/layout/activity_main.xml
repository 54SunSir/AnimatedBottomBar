<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCC"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

<nl.joery.animatedbottombar.AnimatedBottomBar
    android:id="@+id/bottom_bar"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:abb_selectedTabType="icon"
    app:abb_indicatorAppearance="rounded"
    app:abb_indicatorMargin="16dp"
    app:abb_animationTypeSelected="slide"
    app:abb_animationType="slide"
    app:abb_indicatorHeight="4dp"
    app:abb_animationDuration="600"
    app:abb_tabs="@menu/test_tabs"
    app:abb_animationInterpolator="@android:anim/overshoot_interpolator"
    app:abb_selectedIndex="1" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <!--
